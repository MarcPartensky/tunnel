[Unit]
Description=AutoSSH tunnel service for kong
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
Environment="AUTOSSH_GATETIME=0"
ExecStart=/usr/bin/autossh -f -M 0 -N -o "PubkeyAuthentication=yes" -o "PasswordAuthentication=no" -o "ServerAliveInterval 10" -o "ServerAliveCountMax 3" -o ExitOnForwardFailure=yes -R 7023:localhost:22 -p 7022 -i ~/.ssh/tunnel tunnel@marcpartensky.com
Restart=unless-stopped
